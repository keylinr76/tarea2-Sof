@page
@model AplicacionRazor.Pages.Cursos.CrearModel
@{
    ViewData["Title"] = "Crear un nuevo Curso";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Crear un nuevo Curso</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="container" style="padding: 20px;">

                <div class="form-group row">
                    <label asp-for="Curso.NombreCurso" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Curso.NombreCurso" class="form-control" />
                        <span asp-validation-for="Curso.NombreCurso" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Curso.CantidadClases" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Curso.CantidadClases" class="form-control" />
                        <span asp-validation-for="Curso.CantidadClases" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Curso.Precio" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Curso.Precio" class="form-control" />
                        <span asp-validation-for="Curso.Precio" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Crear</button>
                        <a asp-page="Index" class="btn btn-success ml-2">Volver a la lista</a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>
